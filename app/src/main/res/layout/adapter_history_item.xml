<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100">

    <TextView
        android:gravity="center"
        android:textAlignment="center"
        android:text="@string/history_datetime"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/adapter_history_datetime"
        android:layout_weight="35"/>

    <TextView
        android:gravity="center"
        android:textAlignment="center"
        android:text="@string/history_drink_type"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/adapter_history_drink_type"
        android:layout_weight="25"/>

    <TextView
        android:gravity="center"
        android:textAlignment="center"
        android:text="@string/history_drink_amount"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/adapter_history_amount"
        android:layout_weight="40"/>

</LinearLayout>
